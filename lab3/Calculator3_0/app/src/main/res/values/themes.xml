<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator3_0" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="num_button">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center</item>
        <item name="android:backgroundTint">#f2f3f5</item>
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginBottom">-15dp</item>
    </style>

    <style name="action_button">
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#156cd5</item>
        <item name="android:backgroundTint">#f2f2f5</item>
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginBottom">-15dp</item>
    </style>

    <style name="blue_button">
        <item name="android:gravity">center</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#fcfefb</item>
        <item name="android:backgroundTint">#1c73ea</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginTop">-15dp</item>
        <item name="android:layout_marginBottom">-15dp</item>
    </style>

    <style name="top_text">
        <item name="android:gravity">end</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#212124</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="bottom_text">
        <item name="android:gravity">end</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">#80878d</item>
        <item name="android:background">#fff</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:lines">2</item>
        <item name="android:maxLines">2</item>
        <item name="android:elevation">5dp</item>
    </style>

</resources>